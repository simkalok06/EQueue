<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.edu.tarc.e_queue">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/registration"
            android:parentActivityName=".Login" />
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TermAndCondition"
            android:label="Term and Condition"
            android:parentActivityName=".Register" />
        <activity
            android:name=".OrganizationActivity"
            android:label="Queue"
            android:parentActivityName=".Home" />
        <activity
            android:name=".QueueActivity"
            android:label="You are now queueing for..."
            android:parentActivityName=".Home" />
        <activity
            android:name=".TrackYourQ"
            android:label="Your Queue"
            android:parentActivityName=".Home" />
        <activity
            android:name=".History"
            android:label="History"
            android:parentActivityName=".Home" />
        <activity
            android:name=".Favorite"
            android:label="Favorite List"
            android:parentActivityName=".Home"></activity>
    </application>

</manifest>